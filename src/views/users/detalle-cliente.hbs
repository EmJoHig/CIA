<body>

    {{> navigation }}

    <main class="p-5">
        {{> messages }}
        {{> errors }}
        <section class="card mb-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 mt-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Datos de Cliente</h6>
                            </div>
                            <input id="userHidden" hidden value="{{cliente._id}}"/>
                            <div class="card-body">
                                <div class="card-body">

                                    <h6>Nombre: <strong>{{ cliente.name }}</strong></h6>
                                    <h6>Apellido: <strong>{{ cliente.apellido }}</strong></h6>
                                    <h6>Domicilio: <strong>{{ cliente.domicilio }}</strong></h6>
                                    <h6>Telefono: <strong>{{ cliente.telefono }} </strong></h6>
                                    <h6>Email: <strong>{{ cliente.email }}</strong></h6>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-3">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Vehiculos</h6>
                            </div>
                            <div class="card-body">
                                <a href="/vehiculo/new-vehiculo/{{cliente._id}}" class="btn btn-success mb-2">NUEVO</a>
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%"
                                        cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Patente</th>
                                                <th>Modelo</th>
                                                <th>Año</th>
                                                <th>Marca</th>
                                                <th>Color</th>
                                                <th>Detalle</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each vehiculos}}
                                                <tr>
                                                <td>{{ patente }}</td>
                                                <td>{{ modelo }}</td>
                                                <td>{{ anio }}</td>
                                                <td>{{ marca }}</td>
                                                <td>{{ color }}</td>
                                                <td style="text-align: center">
                                                    <a href="/vehiculo/detalle-vehiculo/{{_id}}">
                                                    <i style="color:#000" class="fas fa-file-alt"></i>
                                                    </a>
                                                </td>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="card">
            <div class="container-fluid">
                {{!-- <div class="row">
                    <div class="col-lg-4 mt-3">
